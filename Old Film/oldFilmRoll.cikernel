kernel vec4 apply (sampler src, float time) {
    vec2 p = destCoord() / samplerSize(src);
    p.y = fract(p.y + time);
    
    vec4 outputColor = sample(src, samplerTransform(src, p * samplerSize(src)));

    return outputColor;
}